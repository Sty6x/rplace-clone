extends layout
block content
  main#content-bg
    dialog#modal-container
      span#inner-modal-container
        label(id="name" for="name-input") What should we call you? 
        input(type="text" id="name-input" name="name-input")
      div#modal-btn
        button(type="button" id="confirm-btn") Confirm
    span#current-color
    section(id="pixel-board-container" 
      style={'grid-template-rows':`repeat(${rowAndCols.rows} ,minmax(20px,auto))`,
              'grid-template-columns':`repeat(${rowAndCols.cols},minmax(20px,20px))`
              })
      each cell,index in gridData.grid
        span(class=cell.className id=cell.id, data-color=cell.color)
    div#color-picker
      ul#color-list
        li#color-swatch.item
          input(type="color" id="color-input" name="color-input")
        li.item
        li.item
        li.item
        li.item
        li.item
        li.item
        li.item
        li.item
        li.item
        li.item
    div#chat-box
      div#chat-box-actions
        button(type="button" id="minimize-chat-btn")
      div#user-messages.user-messages-active
      form#chat-input-container
        input(type="text" id="user-chat-input" placeholder="SEND MESSAGE TO CHAT") 
        button(type="button" id="user-chat-btn" autocomplete="off")
